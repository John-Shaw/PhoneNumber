<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_intro_operator" android:src="@drawable/icon" android:contentDescription="operator name"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_operator_name"
            android:id="@+id/textView_operator_name" android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_operator_intro"
            android:id="@+id/textView_operator_intro" android:layout_margin="5dp"/>
</LinearLayout>